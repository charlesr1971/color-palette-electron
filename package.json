{
  "name": "colorpalette",
  "description": "Color Palette",
  "author": "Charles Robertson <http://www.mushroom.man>",
  "license": "MIT",
  "version": "1.0.0",
  "homepage": ".",
  "main": "./dist/electron/main.js",
  "build": {
    "asar": true,
    "asarUnpack": [
      "./node_modules/graphicsmagick-static/bin/**",
      "./node_modules/imagemagick-darwin-static/bin/**"
    ],
    "appId": "com.colorpalette.app",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "extends": null,
    "files": [
      "./index.html",
      "./dist/**/*"
    ]
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start": "npm run build && electron ./dist/electron/main.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --windows",
    "electron:build": "npm run build && electron ./dist/electron/main.js && electron-builder --windows",
    "electron:pack": "electron-builder --prepackaged ./dist/win-unpacked --windows",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/gm": "^1.18.7",
    "electron": "^7.1.14",
    "electron-builder": "^22.4.1",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "electron-root-path": "^1.0.16",
    "electron-store": "^5.1.1",
    "gm": "^1.23.1",
    "graphicsmagick-static": "^0.1.4",
    "imagemagick-darwin-static": "^1.0.11",
    "os": "^0.1.1",
    "path": "^0.12.7",
    "paths": "^0.1.1"
  }
}
