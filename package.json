{
  "name": "electron-ts",
  "version": "1.0.0",
  "description": "Yet another Electron application",
  "build": {
    "asarUnpack": [
      "./node_modules/graphicsmagick-static/bin/**",
      "./node_modules/imagemagick-darwin-static/bin/**"
    ],
    "directories": {
      "output": "./dist/"
    },
    "appId": "com.colorpalette.app",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start": "npm run build && electron ./dist/electron/main.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "npm run build && electron-builder -p never --win"
  },
  "author": "Kevin Hirczy <https://nehalist.io>",
  "license": "MIT",
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/gm": "^1.18.7",
    "electron": "^7.1.14",
    "electron-builder": "^22.4.1",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "gm": "^1.23.1",
    "graphicsmagick-static": "^0.1.4",
    "imagemagick-darwin-static": "^1.0.11",
    "os": "^0.1.1",
    "path": "^0.12.7",
    "paths": "^0.1.1"
  }
}
